{
  "manifest": {
    "name": "neon",
    "author": "Zen Team",
    "version": "1.0.0",
    "description": "Яркая неоновая тема с неоновыми акцентами"
  },
  "variables": {
    "body-bg": "#0A0A0F",
    "body-text": "#E6E6FA",
    
    "titlebar-bg": "#10101A",
    "titlebar-border": "#0D0D15",
    "titlebar-text": "#E6E6FA",
    "window-control-hover-bg": "#1E1E2C",
    "window-control-close-hover-bg": "#FF00FF",
    
    "sidebar-bg": "#12121C",
    "sidebar-border": "#0D0D15",
    
    "tabs-container-bg": "#10101A",
    "tab-border": "#0D0D15",
    "tab-active-bg": "#0A0A0F",
    "tab-text": "#E6E6FA",
    "tab-unsaved-indicator": "#00FFFF",
    
    "scrollbar-thumb": "#3D3D5C",
    "scrollbar-thumb-translucent": "#3D3D5C8F",
    
    "subtitle-text": "#B5B5D7",
    
    "option-button-bg": "transparent",
    "option-button-text": "#E6E6FA",
    "option-button-hover-bg": "rgba(0, 255, 255, 0.1)",
    "option-button-active-bg": "rgba(0, 255, 255, 0.15)",
    
    "settings-panel-bg": "#12121C",
    "settings-panel-border": "#1E1E2C",
    
    "checkbox-border": "#3D3D5C",
    "checkbox-bg": "#0A0A0F",
    "checkbox-checked-bg": "#00FFFF",
    "checkbox-label-text": "#E6E6FA",
    
    "downbar-bg": "#10101A",
    "downbar-border": "#0D0D15",
    "downbar-active-icon": "#FF00FF",
    "downbar-icon-hover-filter": "brightness(1.5)",
    "downbar-icon-active-filter": "drop-shadow(0 0 3px rgba(255, 0, 255, 0.7))",
    
    "icon-filter": "invert(0.9)",
    "icon-hover-filter": "invert(0.9) drop-shadow(0 0 3px rgba(0, 255, 255, 0.7))",
    "filetree-icon-filter": "invert(0.9) brightness(1.2)",
    
    "command-palette-bg": "#12121C",
    "command-palette-shadow": "rgba(0, 255, 255, 0.15)",
    "command-palette-input-border": "#1E1E2C",
    "command-palette-input-bg": "#1A1A28",
    "command-item-hover-bg": "#1E1E2C",
    
    "dialog-bg": "#12121C",
    "dialog-shadow": "rgba(0, 255, 255, 0.15)",
    "dialog-header-bg": "#1A1A28",
    "dialog-header-border": "#1E1E2C",
    "dialog-footer-bg": "#1A1A28",
    "dialog-footer-border": "#1E1E2C",
    
    "reorganize-button-bg": "#1A1A28",
    "reorganize-button-border": "#1E1E2C",
    "reorganize-button-hover-bg": "#252538",
    "reorganize-button-active-bg": "#2E2E46",
    
    "overlay-bg": "rgba(0, 0, 10, 0.7)",
    
    "recent-projects-header-text": "#B5B5D7",
    "recent-project-item-text": "#E6E6FA",
    "recent-project-item-hover-bg": "rgba(0, 255, 255, 0.1)",
    "recent-project-item-active-bg": "rgba(0, 255, 255, 0.15)",
    
    "file-tree-item-hover-bg": "rgba(0, 255, 255, 0.1)",
    "file-tree-item-active-bg": "rgba(0, 255, 255, 0.15)",
    
    "git-branch-text": "#B5B5D7",
    "tab-arrow-inactive-opacity": "0.5",
    "tab-arrow-active-opacity": "1",
    
    "item-bg": "#12121C",
    "item-hover-bg": "#1A1A28",
    "tag-bg": "#1E1E2C",
    "delete-button-bg": "#FF00FF",
    "delete-button-text": "#FFFFFF",
    "delete-button-hover-bg": "#C700C7",
    "cancel-button-bg": "#1E1E2C",
    "cancel-button-text": "#E6E6FA",
    "cancel-button-hover-bg": "#252538",
    "toast-info-bg": "#00008B",
    "toast-info-text": "#E6E6FA",
    "toast-success-bg": "#006400",
    "toast-success-text": "#E6E6FA",
    "toast-error-bg": "#8B0000",
    "toast-error-text": "#E6E6FA",
    "toast-loading-bg": "#2E2E46",
    "toast-loading-text": "#E6E6FA",
    
    "input-border": "#1E1E2C",
    "input-bg": "#0A0A0F",
    "text-color": "#E6E6FA",
    "text-secondary": "#B5B5D7",
    "focus-border": "#00FFFF",
    "focus-shadow": "rgba(0, 255, 255, 0.25)",
    "border-color": "#1E1E2C",
    "button-bg": "#1E1E2C",
    "button-text": "#E6E6FA",
    "button-hover-bg": "#252538",
    "error-color": "#FF00FF"
  }
}
